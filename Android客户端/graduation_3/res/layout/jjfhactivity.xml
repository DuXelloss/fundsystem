<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="10"
		android:orientation="horizontal" android:background="@drawable/head">
		<ImageButton android:src="@drawable/searchbtn"
			android:background="#00000000" android:layout_gravity="center"
			android:layout_margin="5dp" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1.5"
			android:scaleType="fitXY" />
		<TextView android:layout_margin="5dp" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:gravity="center"
			android:layout_weight="1" android:textSize="20dp" android:textColor="@android:color/white"
			android:text="@string/JjfhActivity_Jjfh_ActivityLabel" />
		<ImageButton android:src="@drawable/addselfbtn"
			android:background="#00000000" android:layout_gravity="center"
			android:layout_margin="5dp" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:layout_weight="1.5"
			android:scaleType="fitXY" />
	</LinearLayout>
  	
    <ListView android:id="@android:id/list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1">
    </ListView>
</LinearLayout>
